<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="co.com.arrendamientosnutibara.main.SplashActivity">

    <ImageView android:transitionName="logo"
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_logo_med"
        android:layout_height="wrap_content" />

    <View android:layout_height="1dp"
        android:layout_width="200dp"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"/>

    <co.com.arrendamientosnutibara.widgets.CenturyBoldTextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="LA INMOBILIARIA"
        android:layout_height="wrap_content" />

</LinearLayout>
